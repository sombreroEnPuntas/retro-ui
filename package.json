{
  "name": "retro-ui",
  "version": "0.0.9",
  "license": "MIT",
  "description": "NES-style (8bit-like) react & styled-components UI",
  "homepage": "https://sombreroenpuntas.github.io/retro-ui/",
  "repository": "sombreroEnPuntas/retro-ui",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "jsnext:main": "build/index.es.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rm -rf build && rollup -c",
    "docs": "styleguidist build && cp favicon.ico docs/",
    "eject": "react-scripts eject",
    "lint": "eslint src/{*,**/*}.ts* --ignore-path .gitignore",
    "release": "standard-version",
    "start": "styleguidist server",
    "test": "react-scripts test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "ignorePatterns": [
      "build",
      "coverage",
      "docs",
      "node_modules"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.1.2",
    "husky": "^4.2.5",
    "jest-styled-components": "^7.0.2",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0",
    "react-styleguidist": "^10.4.0",
    "rollup": "^1.27.14",
    "rollup-plugin-typescript2": "^0.25.3",
    "standard-version": "^9.0.0",
    "styled-components": "^5.1.1",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": "16.x",
    "styled-components": "5.x"
  }
}
